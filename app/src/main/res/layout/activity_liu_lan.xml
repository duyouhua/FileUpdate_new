<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >

    <!-- bind_bg -->

    <LinearLayout
        android:id="@+id/toplinearlay"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:orientation="vertical" >

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/mPath"
            android:layout_marginLeft="@dimen/view_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="路径:"
            android:textColor="#0F0F0F"
            android:textSize="18sp" >
        </TextView>
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@+id/toplinearlay"
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>
<View
    android:id="@+id/asdasdasd"
    android:layout_below="@+id/toplinearlay"
    android:background="#ccc"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"/>
    <RelativeLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asdasdasd"
        android:background="@color/white"
         >

        <!-- bind_bg -->

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/view_50dp"
            android:id="@+id/buttonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/confirm"
            android:text="确定"
            android:layout_alignParentLeft="true"
            android:textColor="#000000" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="@dimen/view_50dp"
            android:id="@+id/buttonCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/cancle"
            android:gravity="center"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>